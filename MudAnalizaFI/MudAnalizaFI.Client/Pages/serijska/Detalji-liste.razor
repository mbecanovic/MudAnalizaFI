@page "/serijska-lista/detalji/{id:int}"
@using Shared
@inject HttpClient Http
@inject ISnackbar Snackbar

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-6">

    @if (lista == null)
    {
        <MudProgressCircular Color="Color.Primary" Indeterminate="true" Class="mx-auto d-block" />
        <MudText Align="Align.Center" Color="Color.Secondary" Class="mt-3">Učitavanje podataka...</MudText>
    }
    else
    {
        <MudPaper Elevation="3" Class="p-6 rounded-lg">
            <MudText Typo="Typo.h5" Class="mb-4" Align="Align.Center">
                Detalji liste — Šifra paketa: @lista.SifraPaketa
            </MudText>

            <MudGrid Class="mb-4">
                <MudItem xs="6">
                    <MudText Typo="Typo.body1"><b>Dužina paketa:</b> @lista.DuzinaPaketa m</MudText>
                </MudItem>
                <MudItem xs="6">
                    <MudText Typo="Typo.body1"><b>Brzina linije:</b> @lista.BrzinaLinijeUMinuti min</MudText>
                </MudItem>
                <MudItem xs="12">
                    <MudText Typo="Typo.body2" Color="Color.Secondary">
                        <b>Kreirano:</b> @lista.DatumKreiranja?.ToLocalTime().ToString("dd.MM.yyyy HH:mm")
                    </MudText>
                </MudItem>
            </MudGrid>

            <MudDivider Class="my-4" />

            <MudText Typo="Typo.h6" Class="mb-3">Elementi</MudText>

            @if (lista.TextFieldItems == null || !lista.TextFieldItems.Any())
            {
                <MudText Color="Color.Secondary">Nema unetih elemenata.</MudText>
            }
            else
            {
                <MudTable Items="lista.TextFieldItems" Hover="true" Bordered="true" Dense="true">
                    <HeaderContent>
                        <MudTh>ID</MudTh>
                        <MudTh>Element ID</MudTh>
                        <MudTh>Pod-element ID</MudTh>
                        <MudTh>Redni broj</MudTh>
                        <MudTh>Vreme</MudTh>
                    </HeaderContent>
                    <RowTemplate>
                        <MudTd DataLabel="ID">@context.Id</MudTd>
                        <MudTd DataLabel="Element ID">@context.ElementId</MudTd>
                        <MudTd DataLabel="Pod-element ID">@context.PodElementId</MudTd>
                        <MudTd DataLabel="Redni broj">@context.RedniBroj</MudTd>
                        <MudTd DataLabel="Vreme">@context.Vreme</MudTd>
                    </RowTemplate>
                </MudTable>
            }
        </MudPaper>
    }
</MudContainer>

@code {
    [Parameter]
    public int id { get; set; }

    private OperacionaLista? lista;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            lista = await Http.GetFromJsonAsync<OperacionaLista>($"api/OperacionaLista/{id}");
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Greška pri učitavanju liste: {ex.Message}", Severity.Error);
        }
    }
}
